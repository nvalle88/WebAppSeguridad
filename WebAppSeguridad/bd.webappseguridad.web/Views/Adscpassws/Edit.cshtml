@model bd.webappseguridad.entidades.Negocio.Adscpassw

@{
    ViewData["Title"] = "BasesDatos";
}
<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-10">
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Editar usuarios</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <form asp-action="Edit" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="AdpsLogin" />

                                <fieldset>
                                    <div class="row">

                                        <section class="col col-4">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdpsLogin)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                <input maxlength="32" asp-for="AdpsLogin" disabled="disabled" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdpsLogin)" />
                                                <span asp-validation-for="AdpsLogin" class="text-danger"></span>
                                            </label>
                                        </section>
                                        <section class="col col-4">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdpsTipoUso)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-tint"></i>
                                                <input maxlength="100" asp-for="AdpsTipoUso" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdpsTipoUso)" />
                                                <span asp-validation-for="AdpsTipoUso" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdpsIdContacto)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-archive"></i>
                                                <input maxlength="32" asp-for="AdpsIdContacto" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdpsIdContacto)" />
                                                <span asp-validation-for="AdpsIdContacto" class="text-danger"></span>
                                            </label>
                                        </section>

                                        <section class="col col-4">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdpsIdEntidad)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-envelope"></i>
                                                <input maxlength="32" asp-for="AdpsIdEntidad" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdpsIdEntidad)" />
                                                <span asp-validation-for="AdpsIdEntidad" class="text-danger"></span>
                                            </label>
                                        </section>

                                        <section class="col col-4">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdpsCodigoEmpleado)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-inbox"></i>
                                                <input maxlength="100" asp-for="AdpsCodigoEmpleado" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdpsCodigoEmpleado)" />
                                                <span asp-validation-for="AdpsCodigoEmpleado" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>
                                <footer>

                                    <button type="submit" class="btn btn-primary" id="btn-guardar">Guardar</button>
                                    <a asp-action="Index" onclick="cargando()" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
