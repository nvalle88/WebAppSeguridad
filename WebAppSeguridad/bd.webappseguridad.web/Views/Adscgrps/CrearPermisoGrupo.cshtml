@model bd.webappseguridad.entidades.ViewModels.AdscexeViewModel

<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
<link rel="stylesheet" href="~/lib/waitMe/waitMe.min.css" />

<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Permiso para el <strong><<<  grupo >>></strong> con base de datos:<strong>@Model.AdexBdd</strong> y grupo <strong>@Model.AdexGrupo</strong>  </h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <form asp-action="CrearPermisoGrupoPost" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="AdexBdd" />
                                <input type="hidden" asp-for="AdexGrupo" />
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-6">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdexBdd)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-database"></i>
                                                <input maxlength="30" disabled="disabled" asp-for="AdexBdd" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdexBdd)" />
                                                <span asp-validation-for="AdexBdd" class="text-danger"></span>
                                            </label>
                                        </section>
                                        <section class="col col-6">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdexSistema)</label>
                                            <label class="input">
                                                <select asp-for="AdexSistema" asp- class="form-control" asp-items="ViewBag.AdexSistema">
                                                    <option value="0" selected="" disabled="">@Html.DisplayNameFor(model => model.AdexSistema)</option>
                                                </select>
                                                <span asp-validation-for="AdexSistema" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-6">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdexGrupo)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-users"></i>
                                                <input maxlength="30" disabled="disabled" asp-for="AdexGrupo" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdexGrupo)" />
                                                <span asp-validation-for="AdexGrupo" class="text-danger"></span>
                                            </label>
                                        </section>
                                        <section class="col col-6">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdexAplicacion)</label>
                                            <label class="input">
                                                <select asp-for="AdexAplicacion" asp- class="form-control" asp-items="ViewBag.AdexAplicacion">
                                                    <option value="Raiz" selected="" disabled="">@Html.DisplayNameFor(model => model.AdexAplicacion)</option>
                                                </select>
                                                <span asp-validation-for="AdexAplicacion" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-3">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdexSql)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                <input maxlength="30" asp-for="AdexSql" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdexSql)" />
                                                <span asp-validation-for="AdexSql" class="text-danger"></span>
                                            </label>
                                        </section>
                                        <div class="row">
                                            <section class="col col-2">
                                                <label class="label">&iquest; @Html.DisplayNameFor(model => model.Ins) ?</label>
                                                <label class="checkbox">
                                                    <input type="checkbox" asp-for="Ins" class="form-control">
                                                    <i></i>
                                                    <span asp-validation-for="Ins" class="text-danger"></span>
                                                </label>
                                            </section>
                                            <section class="col col-2">
                                                <label class="label">&iquest; @Html.DisplayNameFor(model => model.Upd) ?</label>
                                                <label class="checkbox">
                                                    <input type="checkbox" asp-for="Upd" class="form-control">
                                                    <i></i>
                                                    <span asp-validation-for="Upd" class="text-danger"></span>
                                                </label>
                                            </section>
                                            <section class="col col-2">
                                                <label class="label">&iquest; @Html.DisplayNameFor(model => model.Del) ?</label>
                                                <label class="checkbox">
                                                    <input type="checkbox" asp-for="Del" class="form-control">
                                                    <i></i>
                                                    <span asp-validation-for="Del" class="text-danger"></span>
                                                </label>
                                            </section>
                                            <section class="col col-2">
                                                <label class="label">&iquest; @Html.DisplayNameFor(model => model.Sel) ?</label>
                                                <label class="checkbox">
                                                    <input type="checkbox" asp-for="Sel" class="form-control">
                                                    <i></i>
                                                    <span asp-validation-for="Sel" class="text-danger"></span>
                                                </label>
                                            </section>
                                        </div>
                                    </div>
                                </fieldset>
                                <footer>
                                    <button type="submit" class="btn btn-primary" id="btn-guardar">Guardar</button>
                                    <a asp-action="MenusGrupo" onclick="cargando()" asp-route-adgrBdd="@Model.AdexBdd" asp-route-adgrGrupo="@Model.AdexGrupo" asp as class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    <script src='~/lib/select2/dist/js/select2.min.js'></script>
    <script src='~/lib/select2/dist/js/i18n/es.js'></script>
    <script src='~/lib/waitMe/waitMe.min.js'></script>
    <script src='~/js/site.js'></script>
    <script type="text/javascript">
        $(document).ready(function () {
            Init_Select2();
        });
    </script>


    <script type="text/javascript">

        $(document).ready(function () {
            $("#AdexSistema").change(function () {
                mostrarLoadingPanel("checkout-form", "Cargando...");
                $("#AdexAplicacion").empty();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ListarAplicacionPorSistema")',
                    dataType: 'json',
                    data: { AdexSistema: $("#AdexSistema").val() },
                    success: function (data) {
                        $.each(data, function (i, data) {
                            $("#AdexAplicacion").append('<option value="'
                                + data.admeAplicacion + '">'
                                + data.admeAplicacion + '</option>');
                            Init_Select2()
                        });
                    }, complete: function (data) {
                        $("#checkout-form").waitMe("hide");
                    },
                    error: function (ex) {
                        alert('Failed to retrieve Departments.' + ex);
                    }
                });
                return false;
            })
        });
    </script>

}