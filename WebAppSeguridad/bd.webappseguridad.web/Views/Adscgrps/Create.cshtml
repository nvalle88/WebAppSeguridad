@model bd.webappseguridad.entidades.Negocio.Adscgrp

<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-10">
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-save"></i> </span>
                        <h2>Grupos de usuarios</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <form asp-action="Create" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-4">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdgrBdd)</label>
                                            <label class="input">

                                                <select asp-for="AdgrBdd" asp- class="form-control" asp-items="ViewBag.AdbdBdd">
                                                    <option value="0" selected="" disabled="">@Html.DisplayNameFor(model => model.AdgrBdd)</option>
                                                </select>
                                                <span asp-validation-for="AdgrBdd" class="text-danger"></span>
                                            </label>
                                        </section>

                                        <section class="col col-4">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdgrGrupo)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-users"></i>
                                                <input maxlength="32" asp-for="AdgrGrupo" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdgrGrupo)" />
                                                <span asp-validation-for="AdgrGrupo" class="text-danger"></span>
                                            </label>
                                        </section>

                                        <section class="col col-4">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdgrNombre)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-delicious"></i>
                                                <input maxlength="32" asp-for="AdgrNombre" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdgrNombre)" />
                                                <span asp-validation-for="AdgrNombre" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>
                                <fieldset>
                                    <section>
                                        <label class="label">@Html.DisplayNameFor(model => model.AdgrDescripcion)</label>
                                        <label class="textarea">
                                            <i class="icon-prepend fa fa-comment"></i>
                                            <textarea rows="6" maxlength="64" asp-for="AdgrDescripcion" placeholder="@Html.DisplayNameFor(model=>model.AdgrDescripcion)"></textarea>
                                            <span asp-validation-for="AdgrDescripcion" class="text-danger"></span>
                                        </label>
                                    </section>
                                </fieldset>
                                <footer>
                                    <button type="submit" class="btn btn-primary" id="btn-guardar">Guardar</button>
                                    <a asp-action="Index" onclick="cargando()" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src='~/lib/select2/dist/js/select2.min.js'></script>
    <script src='~/lib/select2/dist/js/i18n/es.js'></script>
    <script src='~/js/site.js'></script>
    <script type="text/javascript">
        $(document).ready(function () {
            Init_Select2();
        });
    </script>

}
