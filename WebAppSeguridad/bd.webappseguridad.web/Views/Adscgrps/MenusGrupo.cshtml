@model bd.webappseguridad.entidades.ViewModels.MenusGrupo

@{
    ViewData["Title"] = "Index";
}
@using bd.webappseguridad.entidades.Utils
<div id="content">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="btn-group">
            <button class="btn btn-primary">
                Acciones
            </button>
            <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li>
                    <a asp-action="CrearPermisoGrupo" onclick="cargando()" asp-controller="Adscgrps" asp-route-adgrBdd="@Model.Adgrbdd" asp-route-adgrGrupo="@Model.Adgrgrupo"><i class="fa fa-plus"></i>  Crear permiso</a>
                </li>
                <li class="divider"></li>
                <li>
                    <a asp-action="Index" onclick="cargando()" asp-controller="Adscgrps"><i class="fa fa-arrow-left"></i> Regresar</a>
                </li>
            </ul>
        </div>
        <p></p>
        <!-- end col -->
    </div>
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-home"></i> </span>
                        <h2>Permiso para el <strong><<  grupo >></strong> con base de datos: <strong>@Model.Adgrbdd</strong> y grupo <strong>@Model.Adgrgrupo</strong>  </h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" data-page-length="@WebApp.TablaCantidadFilas" class="table table-striped table-bordered table-responsive" width="100%">

                                <thead>
                                    <tr>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                           
                                        </th>
                                    </tr>
                                    <tr>
                                        <th data-class="expand">
                                            <i class="fa fa-fw fa-building text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.listaMenus.FirstOrDefault().AdmeSistema)
                                        </th>
                                        <th data-hide="phone">
                                            <i class="fa fa-fw fa-thumb-tack text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.listaMenus.FirstOrDefault().AdmeAplicacion)
                                        </th>
                                        <th data-hide="phone">
                                            <i class="fa fa-fw fa-gear text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.listaMenus.FirstOrDefault().AdmeControlador)
                                        </th>
                                        <th data-hide="phone">
                                            <i class="fa fa-fw fa-rebel text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.listaMenus.FirstOrDefault().AdmePadre)
                                        </th>
                                        <th data-hide="">
                                            <i class="fa fa-crosshairs text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.listaMenus.FirstOrDefault().AdmeObjetivo)
                                        </th>
                                        <th data-hide="phone">
                                            <i class="fa fa-fw fa-globe text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.listaMenus.FirstOrDefault().AdmeUrl)
                                        </th>
                                        <th data-hide="phone">
                                            <i class="fa fa-fw fa-check-square-o text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.listaMenus.FirstOrDefault().AdmeEstado)
                                        </th>
                                        <th data-hide="phone">
                                            <i class="fa fa-fw fa-retweet text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.listaMenus.FirstOrDefault().AdmeEnsamblado)
                                        </th>
                                        <th data-hide="phone">
                                            Opciones
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.listaMenus)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdmeSistema)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdmeAplicacion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdmeControlador)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdmePadre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdmeObjetivo)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdmeUrl)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdmeEstado)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdmeEnsamblado)
                                        </td>
                                        <td>
                                           <a asp-action="EliminarPermiso" onclick = "return confirm('Desea eliminar el registro... ?');" asp-route-adgrBdd="@Model.Adgrbdd" asp-route-adgrGrupo="@Model.Adgrgrupo" asp-route-sistema="@item.AdmeSistema" asp-route-aplicacion="@item.AdmeAplicacion">Eliminar</a> 
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
}
