@model IEnumerable<bd.webappseguridad.entidades.Negocio.Adscsist>

@{
    ViewData["Title"] = "Index";
}
@using bd.webappseguridad.entidades.Utils
<div id="content">
    <fieldset>
        <div>
            <a asp-action="Create" onclick="cargando()">
                <button type="button" onclick="cargando()" class="btn btn-labeled btn-default">
                    <span class="btn-label">
                        <i class="glyphicon glyphicon-plus"></i>
                    </span>Nuevo sistema
                </button>
            </a>
        </div>
        <p></p>
    </fieldset>
    <div>
    </div>
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="true">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-building"></i> </span>
                        <h2>@Html.DisplayNameFor(model => model.FirstOrDefault().AdstSistema)</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" data-page-length="@WebApp.TablaCantidadFilas" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th>
                                        </th>
                                    </tr>
                                    <tr>
                                        <th data-class="expand">
                                            <i class="fa fa-fw fa-building text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().AdstSistema)
                                        </th>
                                        <th data-hide="phone">
                                            <i class="fa fa-fw fa-database text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().AdstBdd)
                                        </th>
                                        <th data-hide="phone">
                                            <i class="fa fa-fw fa-tasks text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().AdstHost)
                                        </th>
                                        <th data-hide="phone">
                                            <i class="fa fa-fw fa-tags text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().AdstTipo)
                                        </th>
                                        <th data-hide="phone">
                                            <i class="fa fa-fw fa-comment text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().AdstDescripcion)
                                        </th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdstSistema)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdstBdd)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdstHost)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdstTipo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdstDescripcion)
                                            </td>

                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { id = item.AdstSistema },new  { onclick = "cargando()" }) |
                                                @Html.ActionLink("Eliminar", "Delete", new { id = item.AdstSistema }, new { onclick = "return confirm('Desea eliminar el sistema... ?');" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {

}
