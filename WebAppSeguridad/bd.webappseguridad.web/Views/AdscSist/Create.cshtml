@model bd.webappseguridad.entidades.Negocio.Adscsist

<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />

<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-8">
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-save"></i> </span>
                        <h2>Nuevo sistema </h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <form asp-action="Create" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <fieldset>
                                   
                                    <div class="row">
                                        <section class="col col-6">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdstSistema)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-building"></i>
                                                <input maxlength="8" asp-for="AdstSistema" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdstSistema)" />
                                                <span asp-validation-for="AdstSistema" class="text-danger"></span>
                                            </label>
                                        </section>
                                        <section class="col col-6">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdstHost)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-tasks"></i>
                                                <input maxlength="250" asp-for="AdstHost" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdstHost)" />
                                                <span asp-validation-for="AdstHost" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-6">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdstTipo)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-tags"></i>
                                                <input maxlength="3" asp-for="AdstTipo" class="form-control" data-mask="aaa" placeholder="@Html.DisplayNameFor(model=>model.AdstTipo)" />
                                                <span asp-validation-for="AdstTipo" class="text-danger"></span>
                                            </label>
                                        </section>
                                        <section class="col col-6">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdstBdd)</label>
                                            <label class="input">
                                                <select asp-for="AdstBdd" asp- class="form-control" asp-items="ViewBag.AdbdBdd">
                                                    <option  value="0" selected="" disabled="">@Html.DisplayNameFor(model => model.AdstBdd)</option>
                                                </select>
                                                <span asp-validation-for="AdstBdd" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>
                                <fieldset>
                                    <section>
                                        <label class="label">@Html.DisplayNameFor(model => model.AdstDescripcion)</label>
                                        <label class="textarea">
                                            <i class="icon-prepend fa fa-comment"></i>
                                            <textarea rows="3" maxlength="64" asp-for="AdstDescripcion" placeholder="@Html.DisplayNameFor(model=>model.AdstDescripcion)"></textarea>
                                            <span asp-validation-for="AdstDescripcion" class="text-danger"></span>
                                        </label>
                                    </section>
                                </fieldset>
                                <footer>
                                    <button type="submit" class="btn btn-primary" id="btn-guardar">Guardar</button>
                                    <a asp-action="Index" onclick="cargando()" class="btn btn-default">Cancelar</a>

                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src='~/lib/select2/dist/js/select2.min.js'></script>
    <script src='~/lib/select2/dist/js/i18n/es.js'></script>
    <script type="text/javascript">
        $(document).ready(function () {
            Init_Select2();
        });
    </script>
}
