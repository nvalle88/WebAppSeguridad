@model bd.webappseguridad.entidades.Negocio.Adscmenu

@{
    ViewData["Title"] = "BasesDatos";
}
<!-- MAIN CONTENT -->


<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-10">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Editar men&uacute;</h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            <form asp-action="Edit" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="AdmeSistema" />
                                <input type="hidden" asp-for="AdmeAplicacion" />
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-3">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdmeSistema)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-building"></i>
                                                <input maxlength="8" disabled="disabled" asp-for="AdmeSistema" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdmeSistema)" />
                                                <span asp-validation-for="AdmeSistema" class="text-danger"></span>
                                            </label>
                                        </section>

                                        <section class="col col-3">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdmePadre)</label>
                                            <label class="input">
                                                <select asp-for="AdmePadre" asp- class="form-control" asp-items="ViewBag.AdmePadre">
                                                    <option value="Raiz" selected="" disabled="">@Html.DisplayNameFor(model => model.AdmePadre)</option>
                                                </select>
                                                <span asp-validation-for="AdmePadre" class="text-danger"></span>
                                            </label>
                                        </section>

                                        <section class="col col-3">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdmeAplicacion)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-thumb-tack"></i>
                                                <input maxlength="30" asp-for="AdmeAplicacion" disabled="disabled" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdmeAplicacion)" />
                                                <span asp-validation-for="AdmeAplicacion" class="text-danger"></span>
                                            </label>
                                        </section>

                                        <section class="col col-3">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdmeTipo)</label>
                                            <label class="input">
                                                <select asp-for="AdmeTipo" asp- class="form-control">
                                                    <option value="M">Men&uacute;</option>
                                                    <option value="A">Hoja</option>
                                                    <option value="B">Acci&oacute;n</option>
                                                    <option value="Z">Cat&aacute;logo</option>
                                                </select>
                                                <span asp-validation-for="AdmeTipo" class="text-danger"></span>
                                            </label>
                                        </section>

                                    </div>


                                    <div class="row">
                                        <section class="col col-3">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdmeObjetivo)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-crosshairs"></i>
                                                <input maxlength="32" asp-for="AdmeObjetivo" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdmeObjetivo)" />
                                                <span asp-validation-for="AdmeObjetivo" class="text-danger"></span>
                                            </label>
                                        </section>

                                        <section class="col col-3">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdmeTipoObjeto)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-cubes"></i>
                                                <input maxlength="10" asp-for="AdmeTipoObjeto" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdmeTipoObjeto)" />
                                                <span asp-validation-for="AdmeTipoObjeto" class="text-danger"></span>
                                            </label>
                                        </section>

                                        <section class="col col-3">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdmeOrden)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-sort-numeric-asc"></i>
                                                <input maxlength="1" asp-for="AdmeOrden" data-mask="9" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdmeOrden)" />
                                                <span asp-validation-for="AdmeOrden" class="text-danger"></span>
                                            </label>
                                        </section>

                                        <section class="col col-3">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdmeEstado)</label>
                                            <label class="input">
                                                <select asp-for="AdmeEstado" asp- class="form-control">
                                                    <option value="ACTIVO">ACTIVO</option>
                                                    <option value="INACTIVO">INACTIVO</option>
                                                </select>
                                                <span asp-validation-for="AdmeEstado" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-6">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdmeUrl)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-globe"></i>
                                                <input maxlength="150" asp-for="AdmeUrl" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdmeUrl)" />
                                                <span asp-validation-for="AdmeUrl" class="text-danger"></span>
                                            </label>
                                        </section>

                                        <section class="col col-6">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdmeEnsamblado)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-tint"></i>
                                                <input maxlength="100" asp-for="AdmeEnsamblado" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdmeEnsamblado)" />
                                                <span asp-validation-for="AdmeEnsamblado" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">

                                        <section class="col col-8">
                                            <label class="label">@Html.DisplayNameFor(model => model.AdmeControlador)</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-gear"></i>
                                                <input maxlength="150" asp-for="AdmeControlador" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdmeControlador)" />
                                                <span asp-validation-for="AdmeControlador" class="text-danger"></span>
                                            </label>
                                        </section>

                                        <div class="row">
                                            <section class="col col-4">
                                                <label class="label">@Html.DisplayNameFor(model => model.AdmeElemento)</label>
                                                <label class="input">
                                                    <i class="icon-prepend fa fa-random"></i>
                                                    <input maxlength="100" asp-for="AdmeElemento" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdmeElemento)" />
                                                    <span asp-validation-for="AdmeElemento" class="text-danger"></span>
                                                </label>
                                            </section>
                                        </div>

                                    </div>

                                </fieldset>

                                <fieldset>
                                    <section>
                                        <label class="label">@Html.DisplayNameFor(model => model.AdmeDescripcion)</label>
                                        <label class="textarea">
                                            <i class="icon-prepend fa fa-comment"></i>
                                            <textarea rows="6" maxlength="128" asp-for="AdmeDescripcion" placeholder="@Html.DisplayNameFor(model=>model.AdmeDescripcion)"></textarea>
                                            <span asp-validation-for="AdmeDescripcion" class="text-danger"></span>
                                        </label>
                                    </section>
                                </fieldset>
                                <footer>
                                    <button type="submit" class="btn btn-primary" id="btn-guardar">Guardar</button>
                                    <a asp-action="Index" onclick="cargando()" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>

        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <!-- Modal -->

</div>
<!-- END MAIN CONTENT -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src='~/lib/select2/dist/js/select2.min.js'></script>
    <script src='~/lib/select2/dist/js/i18n/es.js'></script>
    <script src='~/js/site.js'></script>
    <script type="text/javascript">
        $(document).ready(function () {
            Init_Select2();
        });

    </script>


}
