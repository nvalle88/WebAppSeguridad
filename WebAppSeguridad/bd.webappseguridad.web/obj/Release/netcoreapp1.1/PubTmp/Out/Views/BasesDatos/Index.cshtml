@model IEnumerable<bd.webappseguridad.entidades.Negocio.Adscbdd>

@{
    ViewData["Title"] = "Index";
}
@using bd.webappseguridad.entidades.Utils
<!-- MAIN CONTENT -->
<div id="content">
    <fieldset>
        <div>
            <a asp-action="Create" onclick="cargando()">
                <button type="button"  onclick="cargando()" class="btn btn-labeled btn-default">
                    <span class="btn-label">
                        <i class="glyphicon glyphicon-plus"></i>
                    </span>Nueva base de datos
                </button>
            </a>
        </div>
        <p></p>
    </fieldset>

    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-database"></i> </span>
                        <h2>Bases de datos</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" data-page-length="@WebApp.TablaCantidadFilas" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th class="hasinput" >
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput" >
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th >
                                        </th>
                                    </tr>
                                    <tr>
                                        <th data-class="expand">
                                            <i class="fa fa-fw fa-database text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().AdbdBdd)
                                        </th>
                                        <th data-hide="phone">
                                            <i class="fa fa-fw fa-desktop text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().AdbdServidor)
                                        </th>
                                        <th data-hide="phone">
                                            <i class="fa fa-fw fa-comment text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().AdbdDescripcion)
                                        </th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdbdBdd)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdbdServidor)
                                            </td>
                                            <td>
                                                <p>
                                                    @Html.DisplayFor(modelItem => item.AdbdDescripcion)
                                                </p>
                                            </td>

                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { id = item.AdbdBdd  },new { onclick = "cargando()" }) |
                                                @Html.ActionLink("Eliminar", "Delete", new { id = item.AdbdBdd }, new { onclick = "return confirm('Desea eliminar el la base de datos... ?');" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
</div>
<!-- END MAIN CONTENT -->

@section Scripts {
    
}
