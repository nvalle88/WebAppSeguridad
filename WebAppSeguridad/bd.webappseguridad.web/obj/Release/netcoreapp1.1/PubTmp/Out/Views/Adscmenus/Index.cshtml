@model List<bd.webappseguridad.entidades.Negocio.Adscmenu>

@{
    ViewData["Title"] = "Index";
}
@using bd.webappseguridad.entidades.Utils
<div id="content">

    <fieldset>
        <div>
            <a asp-action="Create" onclick="cargando()">
                <button onclick="cargando()" type="button" class="btn btn-labeled btn-default">
                    <span class="btn-label">
                        <i class="glyphicon glyphicon-plus"></i>
                    </span>Nuevo men&uacute;
                </button>
            </a>
        </div>
        <p></p>
    </fieldset>

    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-home"></i> </span>
                        <h2>Men&uacute;</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" data-page-length="@WebApp.TablaCantidadFilas" class="table table-striped table-bordered table-responsive" width="100%">
                                <thead>
                                    <tr>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th>
                                        </th>
                                    </tr>
                                    <tr>
                                        <th data-class="expand">
                                            <i class="fa fa-fw fa-building text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().AdmeSistema)
                                        </th>
                                        <th data-hide="phone">
                                            <i class="fa fa-fw fa-thumb-tack text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().AdmeAplicacion)
                                        </th>
                                        <th data-hide="phone">
                                            <i class="fa fa-fw fa-gear text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().AdmeControlador)
                                        </th>
                                        <th data-hide="phone">
                                            <i class="fa fa-fw fa-rebel text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().AdmePadre)
                                        </th>

                                        <th data-hide="phone">
                                            <i class="fa fa-fw fa-check-square-o text-muted hidden-md hidden-sm hidden-xs"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().AdmeTipo)
                                        </th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdmeSistema)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdmeAplicacion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdmeControlador)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdmePadre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdmeEstado)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { admeSistema = item.AdmeSistema, admeAplicacion = item.AdmeAplicacion }, new { onclick = "cargando()" }) |
                                                @Html.ActionLink("Eliminar", "Delete", new { admeSistema = item.AdmeSistema, admeAplicacion = item.AdmeAplicacion }, new { onclick = "return confirm('Desea eliminar el registro... ?');" }) |
                                                @Html.ActionLink("Detalle", "Details", new { admeSistema = item.AdmeSistema, admeAplicacion = item.AdmeAplicacion },new {onclick = "cargando()" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
}

