@model bd.webappseguridad.entidades.Negocio.Adscmiem

@{
    ViewData["Title"] = "CrearMiembroGrupo";
}
<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-10">
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Miembro</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <form asp-action="CrearMiembroGrupoPost" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="AdmiGrupo" />
                                <input type="hidden" asp-for="AdmiBdd" />
                               
                                <fieldset>
                                    <div class="row">

                                        <section class="col col-4">
                                            <label class="input">

                                                <i class="icon-prepend fa fa-users"></i>
                                                <input maxlength="100" disabled="disabled" asp-for="AdmiGrupo" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdmiGrupo)" />
                                                <span asp-validation-for="AdmiGrupo" class="text-danger"></span>
                                            </label>
                                        </section>
                                        <section class="col col-4">
                                            <label class="input">

                                                <i class="icon-prepend fa fa-database"></i>
                                                <input maxlength="100" disabled="disabled" asp-for="AdmiBdd" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdmiBdd)" />
                                                <span asp-validation-for="AdmiBdd" class="text-danger"></span>

                                            </label>
                                        </section>

                                        <section class="col col-4">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                <input maxlength="100" asp-for="AdmiEmpleado" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdmiEmpleado)" />
                                                <span asp-validation-for="AdmiEmpleado" class="text-danger"></span>
                                            </label>
                                        </section>

                                    </div>

                                    <div class="row">
                                        <section class="col col-6">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user-md"></i>
                                                <input maxlength="3" data-mask="aaa" asp-for="AdmiTotal" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdmiTotal)" />
                                                <span asp-validation-for="AdmiTotal" class="text-danger"></span>
                                            </label>
                                        </section>

                                        <section class="col col-6">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-qrcode"></i>
                                                <input maxlength="100" asp-for="AdmiCodigoEmpleado" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.AdmiCodigoEmpleado)" />
                                                <span asp-validation-for="AdmiCodigoEmpleado" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                </fieldset>
                                <footer>
                                    <span class="text-danger">@ViewData["Error"]</span>
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    <a asp-action="MiembrosGrupo" asp-route-adgrBdd="@Model.AdmiBdd" asp-route-adgrGrupo="@Model.AdmiGrupo" asp as class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    <script type="text/javascript">


    </script>
}
