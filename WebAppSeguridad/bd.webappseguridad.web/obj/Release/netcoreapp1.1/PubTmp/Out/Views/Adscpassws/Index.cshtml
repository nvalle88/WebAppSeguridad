@model List<bd.webappseguridad.entidades.Negocio.Adscpassw>

@{
    ViewData["Title"] = "Index";
}
@using bd.webappseguridad.entidades.Utils
<div id="content">
    <fieldset>
        <div>
            <a asp-action="Create" onclick="cargando()">
                <button type="button" onclick="cargando()" class="btn btn-labeled btn-default">
                    <span class="btn-label">
                        <i class="glyphicon glyphicon-plus"></i>
                    </span>Nuevo usuario
                </button>
            </a>
        </div>
        <p></p>
    </fieldset>
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Usuarios</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="datatable_fixed_column" data-page-length="@WebApp.TablaCantidadFilas" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th class="hasinput">
                                            <input type="text" class="form-control" placeholder="Buscar" />
                                        </th>
                                        <th>
                                        </th>
                                    </tr>
                                <th data-hide="phone">
                                    @Html.DisplayNameFor(model => model.FirstOrDefault().AdpsLogin)
                                </th>
                                <th data-hide="phone">
                                    <i class="fa fa-fw fa-phone text-muted hidden-md hidden-sm hidden-xs"></i>
                                    @Html.DisplayNameFor(model => model.FirstOrDefault().AdpsCodigoEmpleado)
                                </th>
                                <th data-class="expand">
                                    <i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i>
                                    @Html.DisplayNameFor(model => model.FirstOrDefault().AdpsFechaVencimiento)
                                </th>
                                <th data-hide="phone">
                                    <i class="fa fa-fw fa-phone text-muted hidden-md hidden-sm hidden-xs"></i>
                                    @Html.DisplayNameFor(model => model.FirstOrDefault().AdpsIdContacto)
                                </th>
                                <th data-hide="phone">
                                    <i class="fa fa-fw fa-phone text-muted hidden-md hidden-sm hidden-xs"></i>
                                    @Html.DisplayNameFor(model => model.FirstOrDefault().AdpsLoginAdm)
                                </th>
                                <th data-hide="phone">
                                    <i class="fa fa-fw fa-phone text-muted hidden-md hidden-sm hidden-xs"></i>
                                    @Html.DisplayNameFor(model => model.FirstOrDefault().AdpsTipoUso)
                                </th>
                                <th>Opciones</th>
                                </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdpsLogin)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdpsCodigoEmpleado)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdpsFechaCambio)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdpsIdContacto)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdpsLoginAdm)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AdpsTipoUso)
                                            </td>

                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { id = item.AdpsLogin },new  { onclick = "cargando()" }) |
                                                @Html.ActionLink("Eliminar", "Delete", new { id = item.AdpsLogin }, new { onclick = "return confirm('Desea eliminar el Usuario... ?');" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
}

